@model PredictorTP.Entidades.EF.Usuario;

@{
    ViewData["Title"] = "Registrar";
}
<div class="container-fluid vh-100">
    @if (!String.IsNullOrEmpty(ViewBag.Error))
    {
        <span class="alert alert-danger error-register">@ViewBag.Error</span>
    }
    <div class="row h-100">
        <div class="col-lg-6 d-none d-lg-flex bg-success text-white align-items-center justify-content-center fondo-predictor-register floating-container">

            <div class="floating-elements">
                <div class="floating-shape shape-1"></div>
                <div class="floating-shape shape-2"></div>
                <div class="floating-shape shape-3"></div>
                <div class="floating-shape shape-4"></div>
                <div class="floating-shape shape-5"></div>
            </div>

            <div class="text-center content-overlay">
                <h1 class="display-4 fw-bold mb-4">Predictor</h1>
                <img src="~/img/logo_app/logo_predictor.png" class="logo-acceso" />
            </div>
        </div>

        <div class="col-lg-6 bg-light d-flex align-items-center justify-content-center py-4">
            <div class="w-100" style="max-width: 500px;">

                <div class="card shadow-sm border-0">
                    <div class="card-body p-4">
                        <h3 class="card-title text-center mb-4 text-success register-title">Crear Cuenta</h3>

                        <form id="registerForm" method="post" asp-controller="Acceso" asp-action="Registrar">
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label asp-for="Nombre" class="form-label fw-semibold">
                                        <span style="color:red; font-weight: bold">*</span>Nombre
                                    </label>
                                    <input asp-for="Nombre" class="form-control" placeholder="Tu nombre" />
                                    <span asp-validation-for="Nombre" class="alert-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Apellido" class="form-label fw-semibold">
                                        <span style="color:red; font-weight: bold">*</span>Apellido
                                    </label>
                                    <input asp-for="Apellido" class="form-control" placeholder="Tu apellido" />
                                    <span asp-validation-for="Apellido" class="alert-danger"></span>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Email" class="form-label fw-semibold">
                                    <span style="color:red; font-weight: bold">*</span>Correo electrónico
                                </label>
                                <input asp-for="Email" class="form-control" placeholder="ejemplo@correo.com" />
                                <span asp-validation-for="Email" class="alert-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Contrasenia" class="form-label fw-semibold">
                                    <span style="color:red; font-weight: bold">*</span>Contraseña
                                </label>
                                <input asp-for="Contrasenia" class="form-control" placeholder="Tu contraseña" />
                                <span asp-validation-for="Contrasenia" class="alert-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label for="confirmPassword" class="form-label fw-semibold">
                                    <span style="color:red; font-weight: bold">*</span>Repetir contraseña
                                </label>
                                <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Confirma tu contraseña" />
                            </div>

                            <div class="d-grid mb-3">
                                <button type="submit" class="btn btn-success btn-lg registrar-btn">Registrarse</button>
                            </div>

                            <div class="text-center">
                                <span class="text-muted">¿Ya tienes cuenta? </span>
                                <a asp-controller="Acceso" asp-action="Ingresar" class="text-decoration-none">Iniciar sesión</a>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
