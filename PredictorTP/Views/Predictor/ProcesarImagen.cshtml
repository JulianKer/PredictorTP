<div class="facial-detection-container">
    <div id="contenedor">
        <video id="video" autoplay muted></video>
        <canvas id="canvas"></canvas>
    </div>
    <div id="resultado" class="loading">Cargando modelos...</div>
</div>

<script>


    document.addEventListener('DOMContentLoaded', function() {
        const container = document.querySelector('.facial-detection-container');
        if (container) {
            container.querySelector('h1')?.classList.add('fade-in');
            container.querySelector('#contenedor')?.classList.add('fade-in');
            container.querySelector('#resultado')?.classList.add('fade-in');
        }
    });
</script>









